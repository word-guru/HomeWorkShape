@page
@model IndexModel
@{
    ViewData["Title"] = "Shapes";
}

<form method="post">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Picture</th>
            </tr>
        </thead>
        @if (Model.shape2.Count < 1)
        {
            @foreach (var item in Model.shape)
            {

                @for (int i = 0; i < item.Key.Count; i++)
                {
                    <tr>
                        <td>@item.Key[i]</td>
                        <td><img class="card-img-top" src="@item.Value[i]" asp-append-version="true" /></td>
                    </tr>
                }

            }
        }
        else
        {
            @foreach (var item in Model.shape2)
            {
                <tr>
                    <td>@item.Key</td>
                    <td><img class="card-img-top imageThumbnail" src="@item.Value" asp-append-version="true" /></td>
                </tr>

            }
        }


    </table>

    <input type="submit" value="Save File" asp-page-handler="SaveFile"></input>

</form>
<form asp-action="LoadFile" method="post" enctype="multipart/form-data">
    <input type="submit" value="Load" asp-page-handler="LoadFile" />
</form>

